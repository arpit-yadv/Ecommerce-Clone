<%-include('../partials/header')%>
<%-include('../partials/navbar')%>

<h1>
  Welcome to the seller's profile: 
  <%=currentUser.name%>
</h1>

<img src="<%=currentUser.image%>">


<div class="container">
  <h2 class="text-center"><a class="btn btn-success btn-lg" href="/seller/products/new">List new Product</a></h2>
  <table>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <%seller.products.forEach(pr=>{%>
      <tr>
        <td><%=pr.name%></td>
        <td><img   style="max-width: 100px;" src="<%=pr.images[0].url%>" alt=""></td>
        <td><a href="/seller/products/<%=pr.id%>/edit">Edit</a></td>
        <td><a href="/seller/products/<%=pr.id%>/delete">Delete</a></td>
     </tr>
    <%})%>
    
    
  </table>
  
</div>




<%-include('../partials/footer')%>