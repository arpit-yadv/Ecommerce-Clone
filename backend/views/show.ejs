<%- include('./partials/header') %>
<%- include('./partials/navbar') %>
    
  

<div class="container-fluid " >
    <div class="row m-4">
        <div class="col-8">
            
            <img src=<%=product.images[0]%> style="max-width: 100%; min-width: 100%; height:auto">
        </div>
        <div class="col-4 ">
           
            <p class=display-4><%=product.productName%></p>
            <p class="" style="font-size: 1.7rem; font-weight: lighter;">â‚¹<%=product.mrp%></p>
            <form action='/<%=product._id%>/cart' method='post'>
                <label for='size'>Size</label>
                <select name='size'>
                <%product.stocks.forEach(s=>{%>
                    <option value="<%=s.size%>"><%=s.size%></option>
                <%})%>
                </select>
               
                <div class='mt-5'>
                    <label for='qty'>Quantity</label>
                    <select name='qty'>
                        <option value='1'>1</option>
                        <option value='2'>2</option>
                        <option value='3'>3</option>
                        <option value='4'>4</option>
                        <option value='5'>5</option>
                    </select>
                </div>
                
               <div class="my-5">
                     <button class='py-3 btn btn-dark btn-outline-light container-fluid border-dark' type='submit'>
                         <span style="font-size: large;">Add to Cart</button>
                     </button>
                </div>
            </form>
            
            <div>
               <p> <%=product.productDescription%> </p>
            </div>
            <div>
                <h3 class="mt-5">Reviews</h3>
               
               <form class='d-flex flex-column' novalidate>
                   <textarea class='form-control' id='comment' name='comment' rows='3' placeholder="Add review" required></textarea>
                   <input id="hidden" type="hidden" value="<%=product._id %>">
                   <button class='btn btn-secondary mt-1 reviewbtn'>Submit</button>

               </form>
               <hr style="height:1px;background: rgba(0, 0, 0, 0.26);">
          
            </div>
            <div class='allreviews'>
              
            <% for(let rev of product.reviews) {%>
                <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Username</h4>
                      <p class="card-text"><%= rev.review %></p>
                    </div>
                </div>
                <% } %>  


            </div> 

        </div>

    </div>

</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/JS/review.js"></script>
</body>
</html>
